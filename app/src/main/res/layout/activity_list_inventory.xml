<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingTop="@dimen/margin_y"
    android:paddingBottom="@dimen/margin_y"
    android:paddingLeft="@dimen/margin_x"
    android:paddingRight="@dimen/margin_x"
    tools:context=".ListInventory">

    <Button
        android:id="@+id/btnInventoryBaru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_y"
        android:paddingBottom="@dimen/margin_y"
        android:paddingLeft="@dimen/margin_x"
        android:paddingRight="@dimen/margin_x"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Inventory baru" />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnInventoryBaru"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>