<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16sp"
    android:paddingRight="16sp"
    android:paddingLeft="16sp"
    android:paddingTop="16sp"
    tools:context=".KasActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="KAS FUTSAL"
        android:textSize="25sp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Nama Kas"/>

    <EditText
        android:id="@+id/etNamaKas"
        android:inputType="text"
        android:hint="Judul atau kegunaan uang kas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_y"
        android:text="Jenis Kas"/>

    <RadioGroup
        android:id="@+id/radioGroupJenisKas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/radioPemasukan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pemasukan" />

        <RadioButton
            android:id="@+id/radioPengeluaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pengeluaran" />

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Tanggal"/>

    <EditText
        android:id="@+id/etTanggalKas"
        android:inputType="date"
        android:hint="Tanggal masuknya kas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nominal"/>

    <EditText
        android:id="@+id/etNominal"
        android:inputType="number"
        android:hint="Nominal uang kas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBackKas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Kembali" />

        <Button
            android:id="@+id/btnSimpanKas"
            style="@style/ButtonCTA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Simpan" />

    </LinearLayout>

</LinearLayout>